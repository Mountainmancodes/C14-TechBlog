<h1 class='page-title'>Tech Blog Posts</h1>
{{#each posts}}
  <article class='post'>
    <h2>{{title}}</h2>
    <p class='post-meta'>By {{user.username}} on {{format_date createdAt}}</p>
    <p class='post-content'>{{content}}</p>
    
    {{#if comments.length}}
      <h3>Comments:</h3>
      {{#each comments}}
        <div class="comment">
          <p>{{comment_text}}</p>
          <p>- {{user.username}}, {{format_date createdAt}}</p>
        </div>
      {{/each}}
    {{/if}}

    {{#if ../loggedIn}}
      <form class="comment-form" data-post-id="{{id}}">
        <textarea name="comment-body" class="comment-body"></textarea>
        <button type="submit">Add Comment</button>
      </form>
    {{/if}}
  </article>
{{/each}}
